  ---- Server extract fragment
  op extractS : AttributeSet Config -> AttributeSetMsgs .
  ceq extractS(wattrs, (to ADDR from ADDR1 : query(ID, NAME, QTYPE))) = {wattrsTrans', msg}
    if  nm(F) . NAME1 := NAME
    /\ (pendingFragments: FRAGMENT_LIST, lastFragment: B, currentSeqNo: SEQ_CTR, currentFragment: CUR_FRAG, severWResponseTTL: sTTL, fragments: FRAGMENT_LIST', Attrs) := wattrs
    /\ wattrsTrans :=
        *** If this is a different seqNo, or a previous Fragment,
        (if (getSeqNo(F) =/= SEQ_CTR) or (getFragmentNumber(F) <= CUR_FRAG)
          *** then if the fragment is from a next packet,
          then (if getSeqNo(F) > SEQ_CTR
                  *** then keep only the new fragment, move packet forward.
                  then flushPendingFragments(wattrs, F)
                  *** else this fragment is a duplicate (ignore).
                  *** TODO: Do not ignore and send ACK
                  else wattrs
                fi)
          *** Else, this is the new fragment of the current packet, accept (move fragment number forward).
          *** TODO: This does not handle when the fragment number could be 2 or more past the last one.
          else ((pendingFragments: (FRAGMENT_LIST : F), lastFragment: isLastFragment(F), currentSeqNo: getSeqNo(F), currentFragment: getFragmentNumber(F), severWResponseTTL: sTTL, fragments: FRAGMENT_LIST'), Attrs)
          fi)
    ---- simply ACK fragment (NAME contains fragment; RCODE 0 is success)
    --- If there's a fragment, grab it and embed in the reply. Otherwise, default to null
    --- TODO: Increment attempts
    --- TODO: Implement checking if client has acked our last fragment before moving it up
    /\ F' := grabCurrentFragment(wattrsTrans) 
    /\ wattrsTrans' := moveFragmentUp(wattrsTrans)
    /\ downstreamdata := (if F' == nilFragment then nullAddr else nm(F') fi)
    /\ msg := (to ADDR1 from ADDR : response(ID, NAME, < NAME, QTYPE, sTTL, downstreamdata >, nil, nil, 0))

    .

  *** Clear the previous fragments, keep only this newly received one, and start
  *** receiving the packet from there.
  op flushPendingFragments : AttributeSet Fragment -> AttributeSet .
  ceq flushPendingFragments(wattrs, F) = wattrsNext
    if (Attrs1, pendingFragments: FRAGMENT_LIST, lastFragment: B, currentSeqNo: SEQ_CTR, currentFragment: CUR_FRAG) := wattrs
      /\ wattrsNext := (Attrs1, pendingFragments: (mtfl : F), lastFragment: isLastFragment(F),
                        currentSeqNo: getSeqNo(F), currentFragment: getFragmentNumber(F))
    .
  
  op updateRcvApp : AttributeSet Config -> AttributeSetMsgs .
  ceq updateRcvApp(wattrs, (to ADDR from ADDR1 : query(ID, NAME, QTYPE))) = {wattrsTrans, msg}
    ---- server attrs
    if (pendingFragments: FRAGMENT_LIST, lastFragment: B, Attrs1) := wattrs
    --- ---- app attrs
    --- /\ (rcvd: PACKET_LIST, Attrs2) := Attrs
    ---- if ready to defragment clean up state else no change
    /\ wattrsTrans := 
      (if B 
      then (pendingFragments: mtfl, lastFragment: false, Attrs1)
      else wattrs 
      fi)
    --- get the fragment
    /\ nm(F) . NAME1 := NAME
    ---- defragment and send packet to Bob
    /\ msg := 
      (if B
      then (to getToAddr(F) from getFromAddr(F) : makePacket(FRAGMENT_LIST))
      else nullMsg
      fi)
      .

endm


