  op sendPkt : AttributeSet Address -> AttributeSetMsgs .
  ceq sendPkt((Attrs, toAddr: ADDR, queue: (PACKET ; PACKET_LIST), sent: PACKET_LIST', numAdmittedPkts: N, wclientReady: WCLIENTREADY), AliceAddr)  =
    {Attrs3, msgOut}
    if Attrs3 := (Attrs, toAddr: ADDR, queue: PACKET_LIST, sent: (PACKET ; PACKET_LIST'), numAdmittedPkts: if N > 0 then sd(N,1) else 0 fi, wclientReady: false)
      /\ msgOut := (to ADDR from AliceAddr : PACKET)
  .
  eq sendPkt(Attrs, AliceAddr) = {Attrs, nullMsg} [owise] .

  --- TODO: Consolidate this with the above op, duplicated for test only
  op sendPktBob : AttributeSet Address -> AttributeSetMsgs .
  ceq sendPktBob((Attrs, toAddr: ADDR, queue: (PACKET ; PACKET_LIST), sent: PACKET_LIST', numAdmittedPkts: N, wnameserverReady: WNAMESERVERREADY), BobAddr)  =
    {Attrs3, msgOut}
    if Attrs3 := (Attrs, toAddr: ADDR, queue: PACKET_LIST, sent: (PACKET ; PACKET_LIST'), numAdmittedPkts: if N > 0 then sd(N,1) else 0 fi, wnameserverReady: false)
      /\ msgOut := (to ADDR from BobAddr : PACKET)
  .
