  vars aliceRbClient : Address .
  vars attrs attrsNext : AttributeSet .
  vars aliceAddr bobAddr ALICE_ADDR BOB_ADDR : Address .
  vars CC_FILE CONTRACT : ByteSeq .
  vars CONTRACT_LIST : ByteSeqL .

  rl [alice-send-contract]:
  < ALICE_ADDR : TxApp | attrs, queue: (CONTRACT :: CONTRACT_LIST) >
    (to ALICE_ADDR : start)
  =>
  < ALICE_ADDR : TxApp | attrs, queue: CONTRACT_LIST >
