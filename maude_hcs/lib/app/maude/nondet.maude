    (to getIodineClientAddr(attrs) from ALICE_ADDR : createCcFile(attrs, nilBytes))
  [ print "Alice start." ]
  .

  
  rl [bob-recv-cc-file]:
  < BOB_ADDR : RxApp | attrs >
    (to BOB_ADDR : CC_FILE)
  =>
  < BOB_ADDR : RxApp | attrs >
  [ print "Bob received CC file " CC_FILE ]
  .

endm


