set clear rules off .
set print attribute on .
set show advisories off .
set verbose off .

load ./mastodon
load ../../../dns/maude/probabilistic/iodine_dns
load ../../../common/maude/adversary-observer
load ../../../common/maude/cp2-interfaces
load ../../../common/maude/_aux
