mod MASTODON_TEST is
  inc IODINE_DNS .
  inc ADVERSARY-OBSERVER .
  inc MASTODON .
  inc CP2-COMMON .
  inc ROUTER .
  inc ADVERSARY-OBSERVER .
  inc CP2_APP . ---- loads rb-integration 
  inc MC-INTERFACE .

  ops alice-raceboat mastodon-client mastodon-server : -> Address .
  ops alice bob iodineSendApp iodineRecvApp iodineClient iodineServer bobMasClient : -> Address .
  ops clientContentMgr serverContentMgr clientDestini serverDestini clientUserModel serverUserModel : -> Address .
  ops monAddr : -> Address .
  op adversary : -> Address .
  ---- the sendtime / receive time collection patterns
  ops ObsS ObsR : -> Observable .
  eq ObsS = mtObs [owise] .
  eq ObsR = mtObs [owise] .

  --- uncomment to model aversary at router inside corporate
  --- collects msgs received by router from interal actors
  --- (stored as sent by local-dns)
  eq ObsR = obsC .  

eq monitorQueryLog? = true .

op router : -> Address .
op adversary : -> Address .

eq fileSize = 1000 .
eq packetSize = 530 .
eq maxPacketSize = 530 .
eq packetOverhead = 33 .
eq maxFragmentLen = 200 .
eq maxFragmentTx = 20 .
---eq nsResourceBounds? = false .
eq pacingTimeoutDelay = 0.05 .
eq pacingTimeoutDelayMax = 0.05 .
eq ackTimeoutDelay = 1.0 . 
eq maxMinimiseCount = 0 .

op zonePwnd2Com : -> List{Record} .
eq zonePwnd2Com =
  < 'pwnd2 . 'com . root, soa, 3600.0, soaData(3600.0) >
  < 'pwnd2 . 'com . root, ns, 3600.0, 'ns . 'pwnd2 . 'com . root >
  < 'ns . 'pwnd2 . 'com . root, a, 3600.0, iodineServer >
  < 'www0 . 'pwnd2 . 'com . root, a, 3600.0, 2 . 0 . 1 . 2 >
  < 'www1 . 'pwnd2 . 'com . root, a, 3600.0, 2 . 1 . 1 . 2 >
  < wildcard . 'pwnd2 . 'com . root, txt, 3600.0, nullAddr > .

eq weirdHashtags = jl(js("person") ;
                      js("man") ;           
                      js("woman") ;
                      js("camera") ;
                      js("TV") )
  .


  --- Initial configuration.
  op initState : -> Config .
  eq initState = 
    rCtr(0)
  makeTxApp(alice, bob, iodineSendApp, clientUserModel, clientContentMgr, file(0, 30))
  makeRxApp(bob, iodineRecvApp, serverUserModel, serverContentMgr)
  < iodineSendApp : SendApp |
      fileDestAddr: iodineRecvApp,
      toAddr: iodineClient,
      queuePopulated: false,
      queue: mtpl,
      numAdmittedPkts: 1,
      iodineReady: true,
      sent: mtpl,
      rcvd: mtpl > 
  < iodineRecvApp : RcvApp | rcvd: mtpl,
      fileDestAddr: bob,
      fileSrcAddr: iodineSendApp,
      toAddr: (iodineServer),
      queuePopulated: true,
      queue: (mtpl),
      numAdmittedPkts: 1,
      iodineReady: true,
      sent: mtpl >
  makeMastodonClient(mastodon-client,
                     mastodon-server,
                     clientContentMgr)
  makeWClient(iodineClient, iodineServer, 'pwnd2 . 'com . root, a, 0.0)
  makeWNameServer(iodineServer, 0.0, (zonePwnd2Com))
  makeMastodonClient(bobMasClient,
                     mastodon-server,
                     serverContentMgr)
  makeMastodonServer(mastodon-server)
  makeRbClient(clientUserModel, clientContentMgr, clientDestini, mastodon-client)
  makeRbServer(serverUserModel, serverContentMgr, serverDestini, bobMasClient, bob)
  < monAddr : WMonitor |
    querySent: nilQueryTimestamp,
    queryRcvd: nilQueryTimestamp,
    pktSent: nilPacketTimestamp,
    pktRcvd: nilPacketTimestamp >
  mkRouter(router)
  mkAdversary(adversary,ObsS,ObsR)
